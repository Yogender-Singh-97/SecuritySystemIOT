<!DOCTYPE html>
<html lang="en">
    <head>
        <title>DashBoard</title>
        <!-- Required meta tags -->
        <%- include('./partials/head.ejs') %>
    </head>
    <body>
        <div class="container-scroller">
            <!-- partial:partials/_sidebar.html -->

            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <%- include('./partials/navigation.ejs') %>
            </nav>

            <!-- Main Content -->

            <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card corona-gradient-card">
                    <div class="card-body py-0 px-0 px-sm-3">
                        <div class="row align-items-center">
                        <div class="col-4 col-sm-3 col-xl-2">
                            <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                        </div>
                        <div class="col-5 col-sm-7 col-xl-8 p-0">
                            <h1 class="mb-1 mb-sm-0 text-center"> Welcome </h1>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
                </div>

                <!-- USER INFORMATION DISPLAY BLOCK -->
                <div class="row">
                <div class="col-sm-4 grid-margin">
                    <div class="card">
                    <div class="card-body">
                        <h5 class="text-danger"> ID - <%= params.identification %></h5>
                        <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0"> <%= params.firstname %> <%= params.lastname %> </h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-account-tie text-primary ml-auto"></i>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="col-sm-4 grid-margin">
                    <div class="card">
                    <div class="card-body">
                        <h5 class="text-danger"> Role </h5>
                        <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0" style = "text-transform:uppercase"> <%= params.role %> </h2>
                            </div>                           
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-account-box text-primary ml-auto"> 
                            </i>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="col-sm-4 grid-margin">
                    <div class="card">
                    <div class="card-body">
                        <h5 class="text-danger"> TIMINGS </h5>
                        <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h3 class="mb-0"> <%= shift_start %> - <%= shift_stop %></h2>
                            </div>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-account-clock-outline text-primary ml-auto"></i>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="col-sm-4 grid-margin">
                    <div class="card">
                    <div class="card-body">
                        <h5 class="text-danger"> Working Days </h5>
                        <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h3 class="mb-0"> <%= start_day %> - <%= stop_day %> </h3>
                            </div>                           
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-calendar-account text-primary ml-auto"> 
                            </i>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="col-sm-4 grid-margin">
                    <div class="card">
                    <div class="card-body">
                        <h5 class="text-danger"> Patrol Assigned </h5>
                        <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h3 class="mb-0"> <%= patrol_name %> </h3>
                            </div>                           
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-routes text-primary ml-auto"> 
                            </i>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="col-sm-4 grid-margin">
                    <div class="card">
                    <div class="card-body">
                        <h5 class="text-danger"> Contact Information </h5>
                        <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h5 class="mb-0"> PhoneNo - <%= params.phonenumber %> </h5>
                            </div>
                            <br>
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h5 class="mb-0"> Email ID - <%= params.email %> </h5>
                            </div>                             
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-contacts text-primary ml-auto"> 
                            </i>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                </div>
                <!-- USER INFORMATION DISPLAY BLOCK END -->

                <!-- User Stats heading -->
                <div class="row">
                <div class="col-3 grid-margin stretch-card">
                    <div class="card ">
                    <div class="card-body py-0 px-0 px-sm-3">
                        <div class="row align-items-center">
                        <div class="col-4 col-sm-3 col-xl-2">
                            <i class=" mdi mdi-account-multiple align-items-center"></i>
                        </div>
                        <div class="col-5 col-sm-7 col-xl-8 p-0">
                            <h4 class="mb-1 mb-sm-0 text-center"> Reports </h4>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
                </div>

                <div class="row">

                <div class="col-sm-4 grid-margin stretch-card">
                    <div class="card">
                    <div class="card-body">
                        <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">Report for Yesterday </h3>
                            <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success ">
                                <a class="nav-link" href="/guard/viewReport?stDay=0-0-0&endDay=0-0-1&pagNo=0"> 
                                    <span class="mdi mdi-file-document-edit-outline icon-item"> </span> 
                                </a>
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="col-sm-4 grid-margin stretch-card">
                    <div class="card">
                    <div class="card-body">
                        <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">Report for Last 7 Days</h3>
                            <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success">
                                <a class="nav-link" href="/guard/viewReport?stDay=0-0-0&endDay=0-0-7&pagNo=0"> 
                                    <span class="mdi mdi-file-document-edit-outline icon-item"> </span> 
                                </a>
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                <div class="col-sm-4 grid-margin stretch-card">
                    <div class="card">
                    <div class="card-body">
                        <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">Report for Last 30 Days </h3>
                            <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success">
                                <a class="nav-link" href="/guard/viewReport?stDay=0-0-0&endDay=0-0-30&pagNo=0"> 
                                    <span class="mdi mdi-file-document-edit-outline icon-item"> </span> 
                                </a>                            
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>

                </div>            
            <!-- content-wrapper ends -->
            </div>

            <footer class="footer">
                <%- include('./partials/footer.ejs') %>
            </footer>
            <!-- main-content div ends -->
            </div> 
            
        <!-- container-scroller ends -->
        </div>

        <!-- plugins:js -->
        <script src="/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script src="/vendors/select2/select2.min.js"></script>
        <script src="/vendors/typeahead.js/typeahead.bundle.min.js"></script>
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="/js/off-canvas.js"></script>
        <script src="/js/hoverable-collapse.js"></script>
        <script src="/js/misc.js"></script>
        <script src="/js/settings.js"></script>
        <script src="/js/todolist.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page -->
        <script src="/js/file-upload.js"></script>
        <script src="/js/typeahead.js"></script>
        <script src="/js/select2.js"></script>
        <!-- End custom js for this page -->
  </body>
</html>